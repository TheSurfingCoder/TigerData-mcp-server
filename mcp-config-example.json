{
  "mcpServers": {
    "mcp-timescale": {
      "command": "node",
      "args": ["/path/to/your/TimescaleMCPServer/dist/index.js"],
      "env": {
        "TIMESCALE_HOST": "your-timescale-host.tsdb.cloud.timescale.com",
        "TIMESCALE_PORT": "31316",
        "TIMESCALE_DB": "tsdb",
        "TIMESCALE_USER": "tsdbadmin",
        "TIMESCALE_PASSWORD": "your_password",
        "TIMESCALE_SSL_MODE": "require",
        "TIMESCALE_CONNECT_TIMEOUT": "30000",
        "TIMESCALE_QUERY_TIMEOUT": "30000"
      }
    }
  }
} 